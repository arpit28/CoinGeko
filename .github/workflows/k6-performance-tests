name: K6 Performance Tests

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main
  workflow_dispatch:

jobs:
  k6_test:
    name: Run K6 Tests
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Run k6 test
        uses: grafana/k6-action@v0.3.1
        with:
          filename: performanceTest.js

      - name: Upload performance test results
        uses: actions/upload-artifact@v4
        if: always()
        with:
          name: k6-report
          path: summary.json
          retention-days: 30
